@model List<MoviesViewModel>
@{
    Layout = "~/Views/Layout/Index.cshtml";
}
<style>
    ::-webkit-scrollbar {
        background-color: transparent;
    }
</style>

<div class="container">
    <br />
    <h3>
        <a href="javascript:void();"><i class="zmdi zmdi-slideshare"></i> <span> IMDB Top 100 Movies</span></a>
    </h3>
    <br />
    <div style="height: 530px; overflow-x: hidden; overflow-y: scroll;">
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>Film Adı</th>
                <th>Film Puanı</th>
                <th>Detaylar</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.rank</th>
                    <th>@item.title</th>
                    <th>@item.rating</th>
                    <th><a href="@item.imdb_link" class="btn btn-dark">Detaylar</a></th>
                </tr>
            }
        </table>
    </div>
</div>
